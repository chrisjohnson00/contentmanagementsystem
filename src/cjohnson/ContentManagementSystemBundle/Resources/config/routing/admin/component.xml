<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="admin_component" path="/">
        <default key="_controller">cjohnsonContentManagementSystemBundle:Component:index</default>
    </route>

    <route id="admin_component_show" path="/{id}/show">
        <default key="_controller">cjohnsonContentManagementSystemBundle:Component:show</default>
    </route>

    <route id="admin_component_new" path="/new">
        <default key="_controller">cjohnsonContentManagementSystemBundle:Component:new</default>
    </route>

    <route id="admin_component_create" path="/create" methods="POST">
        <default key="_controller">cjohnsonContentManagementSystemBundle:Component:create</default>
    </route>

    <route id="admin_component_edit" path="/{id}/edit">
        <default key="_controller">cjohnsonContentManagementSystemBundle:Component:edit</default>
    </route>

    <route id="admin_component_update" path="/{id}/update" methods="POST|PUT">
        <default key="_controller">cjohnsonContentManagementSystemBundle:Component:update</default>
    </route>

    <route id="admin_component_delete" path="/{id}/delete" methods="POST|DELETE">
        <default key="_controller">cjohnsonContentManagementSystemBundle:Component:delete</default>
    </route>

</routes>
