<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="admin_row" path="/">
        <default key="_controller">cjohnsonContentManagementSystemBundle:Row:index</default>
    </route>

    <route id="admin_row_show" path="/{id}/show">
        <default key="_controller">cjohnsonContentManagementSystemBundle:Row:show</default>
    </route>

    <route id="admin_row_new" path="/new">
        <default key="_controller">cjohnsonContentManagementSystemBundle:Row:new</default>
    </route>

    <route id="admin_row_create" path="/create" methods="POST">
        <default key="_controller">cjohnsonContentManagementSystemBundle:Row:create</default>
    </route>

    <route id="admin_row_edit" path="/{id}/edit">
        <default key="_controller">cjohnsonContentManagementSystemBundle:Row:edit</default>
    </route>

    <route id="admin_row_update" path="/{id}/update" methods="POST|PUT">
        <default key="_controller">cjohnsonContentManagementSystemBundle:Row:update</default>
    </route>

    <route id="admin_row_delete" path="/{id}/delete" methods="POST|DELETE">
        <default key="_controller">cjohnsonContentManagementSystemBundle:Row:delete</default>
    </route>

</routes>
