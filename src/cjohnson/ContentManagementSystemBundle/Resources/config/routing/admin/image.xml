<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="admin_image" path="/">
        <default key="_controller">cjohnsonContentManagementSystemBundle:Image:index</default>
    </route>

    <route id="admin_image_show" path="/{id}/show">
        <default key="_controller">cjohnsonContentManagementSystemBundle:Image:show</default>
    </route>

    <route id="admin_image_new" path="/new">
        <default key="_controller">cjohnsonContentManagementSystemBundle:Image:new</default>
    </route>

    <route id="admin_image_create" path="/create" methods="POST">
        <default key="_controller">cjohnsonContentManagementSystemBundle:Image:create</default>
    </route>

    <route id="admin_image_edit" path="/{id}/edit">
        <default key="_controller">cjohnsonContentManagementSystemBundle:Image:edit</default>
    </route>

    <route id="admin_image_update" path="/{id}/update" methods="POST|PUT">
        <default key="_controller">cjohnsonContentManagementSystemBundle:Image:update</default>
    </route>

    <route id="admin_image_delete" path="/{id}/delete" methods="POST|DELETE">
        <default key="_controller">cjohnsonContentManagementSystemBundle:Image:delete</default>
    </route>

</routes>
