{% extends '::base.html.twig' %}

{% block body -%}
    <ol class="breadcrumb">
        {% include 'cjohnsonContentManagementSystemBundle:Admin:breadcrumbDropdown.html.twig' %}
        <li><a href="{{ path('setting') }}">Settings</a></li>
        <li class="active">Edit Settings</li>
    </ol> <h1>Edit Settings</h1>
    {{ form(edit_form) }}

    <div class="row">
        <a class="btn btn-default" href="{{ path('setting') }}">
            <span class="glyphicon glyphicon-arrow-left"></span>  Back to the list
        </a>
    </div>
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Bootswatch Template Sample</h3>
            </div>
            <div class="panel-body">
                {% if entity.bootswatchTemplate|lower != 'default' %}
                    <a href="https://bootswatch.com/{{ entity.bootswatchTemplate|lower }}/" target="_blank"
                       id="templateLink"> <img
                                src="https://bootswatch.com/{{ entity.bootswatchTemplate|lower }}/thumbnail.png"
                                id="templateThumbnail"/></a>
                {% else %}
                    Check out default bootstrap <a href="http://getbootstrap.com/css/" target="_blank">here</a>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
{% block footerJS %}
    <script>
        $("select")
                .change(function ()
                {
                    var link = "";
                    var thumbnail = "";
                    $("select option:selected").each(function ()
                    {
                        link = "https://bootswatch.com/" + $(this).text().toLowerCase() + "/";
                        thumbnail = "https://bootswatch.com/" + $(this).text().toLowerCase() + "/thumbnail.png";
                    });
                    if ($("select option:selected").text().toLowerCase() != "default")
                    {
                        $("#templateLink").attr("href", link);
                        $("#templateThumbnail").attr('src', thumbnail);
                    }
                })
                .change();
    </script>
{% endblock %}

