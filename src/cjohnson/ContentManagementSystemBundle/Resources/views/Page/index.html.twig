{% extends '::base.html.twig' %}
{% block body -%}
    <ol class="breadcrumb">
        {% include 'cjohnsonContentManagementSystemBundle:Admin:breadcrumbDropdown.html.twig' %}
        <li class="active">Pages</li>
    </ol> <h1>Page list</h1>
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Uri</th>
            <th>Home page</th>
            <th>Published</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a class="btn" href="{{ path('admin_page_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td><a href="/{{ entity.uri }}">{{ entity.uri }}</a></td>
                <td>{% if entity.isHomePage %}Yes{% else %}No{% endif %}</td>
                <td>{% if entity.published %}Yes{% else %}No{% endif %}</td>
                <td>
                    <a class="btn btn-default" href="{{ path('admin_page_show', { 'id': entity.id }) }}"><span
                                class="glyphicon glyphicon-zoom-in"></span> Details</a>
                    <a class="btn btn-default" href="{{ path('admin_page_edit', { 'id': entity.id }) }}"><span
                                class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-default" href="{{ path('admin_page_new') }}">
        <span class="glyphicon glyphicon-plus"></span> Create a new page
    </a>
{% endblock %}
