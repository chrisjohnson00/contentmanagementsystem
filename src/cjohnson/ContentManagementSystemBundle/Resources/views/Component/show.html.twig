{% extends '::base.html.twig' %}

{% block body -%}
    <ol class="breadcrumb">
        {% include 'cjohnsonContentManagementSystemBundle:Admin:breadcrumbDropdown.html.twig' %}
        <li><a href="{{ path('admin_component') }}">Components</a></li>
        <li class="active">Component: {{ entity.name }}</li>
    </ol>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">{{ entity.name }}
            </h3>
        </div>
        <div class="panel-body">
            <table class="table">
                <tbody>
                <tr>
                    <th>Created Date</th>
                    <td>{{ entity.createdDate|date('Y-m-d H:i:s') }}</td>
                </tr>
                <tr>
                    <th>Modified Date</th>
                    <td>{{ entity.modifiedDate|date('Y-m-d H:i:s') }}</td>
                </tr>
                </tbody>
            </table>
            <div class="row">
                <div class="col-md-1"><a role="button" class="btn btn-primary"
                                         href="{{ path('admin_component_edit', { 'id': entity.id }) }}">
                        Edit
                    </a></div>
                <div class="col-md-11">{{ form(delete_form) }}   </div>
            </div>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Content
            </h3>
        </div>
        <div class="panel-body">
            {{ entity.content|raw }}
        </div>
    </div>
{% endblock %}
